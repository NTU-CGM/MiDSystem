#start --metagenome
from signal import signal, SIGPIPE, SIG_DFL
signal(SIGPIPE, SIG_DFL) 
rule all:
    input:      
        expand(user_root+"a5_miseq/user.final.scaffolds.fasta"),
#a5
rule a5miseq:
    input:
        user_root+"trimmomatic/R1.trimmed.fastq",
        user_root+"trimmomatic/R2.trimmed.fastq"
    output:
        user_root+"a5_miseq/user.final.scaffolds.fasta"

    shell:
        "cd "+user_root+"a5_miseq;"
        "a5_pipeline.pl --threads=15 {input} user 1> a5.stdout.log 2>a5.stderr.log;" ## Due to the depth of a sample which is insufficient may cause a5 fail, cancel to use --metagenome option temporarily.
        #"a5_pipeline.pl --threads=15 --metagenome {input} user 1> a5.stdout.log 2>a5.stderr.log;"
        "ln -s user.contigs.fasta user.final.scaffolds.fasta;"
        "sed -i -r 's/\|size[0-9]+//' user.final.scaffolds.fasta;"
